/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@angular/*": ["./node_modules/@angular/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "types": ["jquery"],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ]
  }
}
